root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.lua]
indent_style = space
indent_size = 4
charset = utf-8
max_line_length = 1000

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.json]
indent_size = 2
max_line_length = 120
